<% content_for :title, "Todos" %>
<div class="container mx-auto p-8">
    <h1 class="text-2xl font-bold text-center mb-6">Here are all your todos:</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @todos.each do |todo| %>
            <a href="<%= todo_path(todo)%>">
            <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300">
                <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= todo.title %></h2>
                <p class="text-gray-600 text-sm"><%= todo.body %></p>
            </div>
            </a>
        <% end %>
    </div>
    <%= link_to "Create Todo", new_todo_path %>

</div>
